<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <script>
        function hh()
        {
            var x=0;
            return function(){
                x++;
                return x;
            }
        }
        var func= hh();
    </script>
    <title>Title</title>
</head>
<body>
<div class="container">
    <div class="row" >
        <div class="col-12" >
        <table class="table">
            <tr>
                <td>serial no.</td>
                <td>product name</td>
                <td>product price</td>
            </tr>
            {{#each arr as |x|}}
            <tr>
                <td id="serial"><script>document.write(func())</script> </td>
                <td>{{x.pname}}</td>
                <td>{{x.pprice}}</td>
            </tr>
            {{/each}}
        </table>
        </div>

    </div>
    <a href="/products">shop page</a>
</div>

</body>
</html>